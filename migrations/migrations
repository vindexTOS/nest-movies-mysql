
--  you should create this tables one by one, from genre to actor 



CREATE TABLE movies (
  id INT AUTO_INCREMENT PRIMARY KEY,
  title VARCHAR(255) NOT NULL,  -- Add NOT NULL if title should not allow NULL values
  rating INT,
  
);

CREATE TABLE actor (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(225),
  movie_id INT,
  FOREIGN KEY (movie_id) REFERENCES movies(id)
);

CREATE TABLE collection (
  id INT AUTO_INCREMENT PRIMARY KEY,
  actor_id INT,
  movie_id INT,
  FOREIGN KEY (movie_id) REFERENCES movies(id)
  FOREIGN KEY (actor_id) REFERENCES actor(id),
);


CREATE TABLE genre (
     id INT AUTO_INCREMENT PRIMARY KEY,
    genre_name VARCHAR(225),

 
);